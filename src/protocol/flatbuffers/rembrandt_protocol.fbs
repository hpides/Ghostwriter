namespace Rembrandt.Protocol;

union Message {
    AllocateRequest,
    AllocateResponse,
    AllocateException,
    CommitRequest,
    CommitResponse,
    CommitException,
    FetchRequest,
    FetchResponse,
    FetchException,
    InitializeRequest,
    InitializeResponse,
    RMemInfoRequest,
    RMemInfoResponse,
    StageRequest,
    StageResponse,
    StageException,
}

table BaseMessage {
    message_id:uint64;
    content:Message;
}

table AllocateRequest {
    topic_id:uint32;
    partition_id:uint32;
    segment_id:uint32;
}

table AllocateResponse {
    size:uint64;
    offset:uint64;
}

table AllocateException {
    error_code:uint16;
    error_message:string;
}

table StageRequest {
    topic_id:uint32;
    partition_id:uint32;
    message_size:uint64;
}

table StageResponse {
   logical_offset:uint64;
   remote_location:uint64;
}

table StageException {
   error_code:uint16;
   error_message:string;
}

table CommitRequest {
    topic_id:uint32;
    partition_id:uint32;
    logical_offset:uint64;
    message_size:uint64;
}

table CommitResponse {
    offset:uint64;
}

table CommitException {
    error_code:uint16;
    error_message:string;
}

table FetchRequest {
    topic_id:uint32;
    partition_id:uint32;
    logical_offset:uint64;
}

table FetchResponse {
    remote_location:uint64;
    commit_offset:uint64;
}

table FetchException {
    error_code:uint16;
    error_message:uint16;
}

table InitializeRequest {
}

table InitializeResponse {
}

table RMemInfoRequest {
}

table RMemInfoResponse {
    remote_address:uint64;
    remote_key:string;
}
